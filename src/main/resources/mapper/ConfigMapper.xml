<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renguangli.rportal.mapper.ConfigMapper">

    <!-- 开启mybatis二级缓存 -->

    <sql id="table_name">rportal_config</sql>

    <select id="getConfig" resultType="Config">
        select id,name,value,description
        from <include refid="table_name"/>
        where name = #{name}
    </select>

    <select id="listConfig" resultType="Config">
        select id,name,value,description
        from <include refid="table_name"/>
        where 1=1
        <if test="config.name != null and config.name != ''">
            and name like concat(#{config.name},'%')
        </if>
        limit #{page},#{limit}
    </select>

    <select id="countConfig" resultType="int">
        select count(*)
        from <include refid="table_name"/>
        where 1=1
        <if test="config.name != null and config.name != ''">
            and name like concat(#{config.name},'%')
        </if>
    </select>

    <delete id="deleteConfig">
        delete from <include refid="table_name"/>
        where id = #{id}
    </delete>

    <delete id="batchDeleteConfig">
        delete from <include refid="table_name"/>
        where id in
        <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <insert id="saveConfig">
        insert into <include refid="table_name" />
        (name,value,description,update_datetime)
        values (#{config.name},#{config.value},#{config.description},#{config.updateDatetime})
    </insert>

    <update id="updateConfig">
        update <include refid="table_name"/>
        set name = #{config.name},
        value = #{config.value},
        description = #{config.description}
        where id = #{config.id}
    </update>
</mapper>