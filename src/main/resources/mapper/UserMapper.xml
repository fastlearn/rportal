<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renguangli.rportal.mapper.UserMapper">

    <sql id="table_name">rportal_user</sql>
    
    <sql id="cols">
      user_id userId,username,password,salt,locked,expired,
      name,phone_number phoneNuber,email,
      create_datetime createDatetime,
      update_datetime updateDatetime,
      password_update_datetime passwordUpdateDatetime
    </sql>

    <select id="getUser" resultType="User">
        select <include refid="cols"/>
        from <include refid="table_name" />
        where 1=1
        <if test="user.username != null and user.username != ''">
            and username = #{user.username}
        </if>
    </select>

    <select id="listUser" resultType="User">
        select <include refid="cols"/>
        from <include refid="table_name" />
        where 1=1
        <if test="user.username != null and user.username != ''">
            and username = #{user.username}
        </if>
    </select>

    <delete id="deleteUser">
        delete from <include refid="table_name" />
        where user_id = #{userId}
    </delete>

    <update id="updateUser">
        update <include refid="table_name"/>
        <set>
            <if test="user.username != null and user.username">
                username = #{user.username},
            </if>
            <if test="user.password != null and user.password">
                password = #{user.password},
            </if>
            <if test="user.locked != null">
                locked = #{user.locked},
            </if>
            <if test="user.name != null and user.name">
                name = #{user.name},
            </if>
            <if test="user.phoneNumber != null and user.phoneNumber">
                phone_number = #{user.phoneNumber},
            </if>
            <if test="user.email != null and user.email">
                email = #{user.email},
            </if>
        </set>
        where user_id = #{user.userId}
    </update>

    <select id="listRole" resultType="String">
        select r.role
        from <include refid="table_name" /> u
          left join rportal_user_role ur on ur.user_id = u.user_id
          left join rportal_role r on r.role_id = ur.role_id
        where u.username = #{username}
    </select>

    <select id="listUrl" resultType="String">
        select p.url
        from <include refid="table_name" /> u
          left join rportal_user_permission up on up.user_id = u.user_id
          left join rportal_permission p on p.permission_id = up.permission_id
        where u.username = #{username}
    </select>

</mapper>